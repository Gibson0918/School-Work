weight = int(input('Please enter your weight in kg:'))#asking the user to input their weight
height = float(input('Please enter your height in meters:'))#asking the user to input their height

#Perform BMI calculation
def calculate_bmi(weight,height):
    bmi =weight/(height**2)   #Formula to calculate BMI
    print('BMI:',bmi) #Modify to display the calculated BMI value

    return bmi

    

calculate_bmi(weight,height) 
